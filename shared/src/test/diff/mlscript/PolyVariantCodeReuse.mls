def eval_lexpr eval_rec subst v = case v of {
  | Lambda -> eval_lambda eval_rec subst v
  | Expr -> eval_expr eval_rec subst v
  }
//│ eval_lexpr: ((Cons[('a, Var | 'lhs,) | 'A] & {head: ('a, Var | 'lhs,), tail: Nil | 'tail} | 'tail) -> 'lhs0 -> ('lhs & 'result & (#Abs & {body: 'lhs0, lhs: Num | Object & ~#Num, name: string & 'a, rhs: Num | Object & ~#Num} | 'lhs1 & (Num & {lhs: Num | Object & ~#Num, name: string, rhs: Num | Object & ~#Num} | Object & {lhs: Num | Object & ~#Num, name: string, rhs: Num | Object & ~#Num} & ~#Abs & ~#Num)))) -> ('b & List['A] & 'tail) -> (#Abs & {body: 'lhs0, name: 'a} | #Add & {lhs: 'lhs0, rhs: 'lhs0} | #App & {lhs: 'lhs0, rhs: 'lhs0} | #Mul & {lhs: 'lhs0, rhs: 'lhs0} | 'result & (#Num & {lhs: Num | Object & ~#Num, name: string, rhs: Num | Object & ~#Num} | Var & {lhs: Num | Object & ~#Num, rhs: Num | Object & ~#Num})) -> (Abs['lhs] | Add['lhs] | App['lhs] & {lhs: 'lhs1, rhs: 'lhs} | Mul['lhs] | Num | 'result)
//│   where
//│     'b <: #Cons & {head: (string, {lhs: Num | Object & ~#Num, name: string, rhs: Num | Object & ~#Num} & 'result,), tail: 'b} | Nil
//│           = <no result>
//│             eval_lambda, eval_var, list_assoc and eq are not implemented

rec def eval3 subst = eval_lexpr eval3 subst
//│ eval3: (List[?] & 'tail) -> 'a -> 'result
