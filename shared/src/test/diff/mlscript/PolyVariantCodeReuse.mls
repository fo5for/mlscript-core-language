//│             <: 'a & (#Abs & {lhs: Num | Object & ~#Num, rhs: Num | Object & ~#Num} & 'b | 'lhs & (Num & {lhs: Num | Object & ~#Num, rhs: Num | Object & ~#Num} | Object & {lhs: Num | Object & ~#Num, rhs: Num | Object & ~#Num} & ~#Abs & ~#Num)) & (#Abs & {name: string} & 'b | 'lhs & (Num & {name: string} | Object & {name: string} & ~#Abs & ~#Num)) & (#Abs & 'b | 'lhs & (Num | Object & ~#Abs & ~#Num))
//│     'lhs :> Add['result] & {lhs: 'result, rhs: 'result} | App['lhs] & {rhs: 'result} | Mul['result] & {lhs: 'result, rhs: 'result} | Num | Var | 'result
